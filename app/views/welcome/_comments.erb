<div class="comments">
  <% comments.each do |c| %>
    <div class="comment">
      <div class="comment-created-at">On <%= c.created_at.strftime('%B %e, %l:%M %p') %> EST</div>
      <div>
        <span class="comment-name"><%= c.name %> said: </span>
        <span class="comment-text"><%= c.text %></span>
      </div>
    </div>
  <% end %>
</div>
