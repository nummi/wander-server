<script type="text/javascript" id="data">
  window.events = [
    <% events.each do |e| %>
      {
        id: <%= e.id %>,
        displayText: '<%= e.display_text %>',
        latitude: <%= e.geolocation['latitude'] %>,
        longitude: <%= e.geolocation['longitude'] %>,
        <% if e.photo && e.photo.url %>
        <%= "imageSrc: '#{e.photo.url(:thumbnail)}',".html_safe %>
        <%= "fullImageSrc: '#{e.photo.url.html_safe}',".html_safe %>
        <% end %>
      },
    <% end %>
  ];
</script>
