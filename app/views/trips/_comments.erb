<div class="comments">
  <%= render 'trips/comments_reactions', event: event %>
  <% comments.each do |c| %>
    <div class="comment">
      <div class="comment-text"><%= c.text %></div>
      <div>
        <span class="comment-name"><%= c.name %></span>
        <span class="comment-created-at"><%= time_ago_in_words c.created_at %> ago</span>
      </div>
    </div>
  <% end %>
</div>
